// Place your settings in this file to overwrite the default settings
{
  "editor.tabSize": 2,
  "editor.renderWhitespace": "boundary",
  "terminal.integrated.shell.osx": "/usr/local/bin/zsh",
  "window.title": "${activeEditorLong}${separator}${rootName}",
  "editor.minimap.enabled": false,
  "editor.minimap.renderCharacters": false,
  "window.zoomLevel": 0,
  "go.gopath": "/Users/cleung/go",
  "go.enableCodeLens": {
    "references": false,
    "runtest": false
  },
  "go.coverageDecorator": {
    "type": "gutter"
  },
  "editor.renderControlCharacters": false,
  "workbench.colorTheme": "Atom One Dark",
  "rewrap.wrappingColumn": 80,
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false,
    "suppressResultsExplorerNotice": false,
    "suppressShowKeyBindingsNotice": true,
    "suppressUpdateNotice": true,
    "suppressWelcomeNotice": true
  },
  "problems.decorations.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.enabled": false,
  "gitlens.keymap": "chorded",
  "gitlens.resultsExplorer.files.layout": "auto",
  "gitlens.historyExplorer.enabled": true,
  "gitlens.gitExplorer.files.layout": "auto",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "workbench.colorCustomizations": {
    "terminal.foreground" : "#00f900",
    "terminal.background" : "#000000",
    "terminal.border": "#ff0000"
  },
  "terminal.integrated.scrollback": 10000,
  "editor.cursorBlinking": "solid",
  "editor.cursorStyle": "block",
  "gitlens.views.repositories.files.layout": "auto",
  "gitlens.views.fileHistory.enabled": true,
  "gitlens.views.lineHistory.enabled": true,
  "gitlens.views.compare.files.layout": "auto",
  "gitlens.views.search.files.layout": "auto",
  "terminal.integrated.rendererType": "dom",
  "go.useLanguageServer": true
}